# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Makefiles need tabs
[Makefile]
indent_style = tab

# Markdown has semantics for trailing whitespaces
[*.md]
trim_trailing_whitespace = false

# JSON
[*.json]
indent_size = 2
